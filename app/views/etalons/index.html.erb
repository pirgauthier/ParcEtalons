<p id="notice"><%= notice %></p>

<h1>Etalons</h1>

<table class="table">
  <thead>
    <tr>
      <th>Serie</th>
	  <th>Marque</th>
      <th>Modele</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @etalons.each do |etalon| %>
      <tr>
        <td><%= etalon.serie %></td>
		<td><%= etalon.marque.name %></td>
        <td><%= etalon.modele %></td>
        <td><%= link_to 'Afficher', etalon %></td>
        <td><%= link_to 'Modifier', edit_etalon_path(etalon) %></td>
        <td><%= link_to 'Supprimer', etalon, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter Etalon', new_etalon_path %>
